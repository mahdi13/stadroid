<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Stadroid" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#cccccc</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">#FFFFFF</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!--<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
        <item name="android:statusBarColor">@color/colorPrimaryDarkDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:dropDownListViewStyle">@style/Widget.Stadroid.Spinner</item>
    </style>

    <style name="AlertDialogCustom" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.UnelevatedButton
        </item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.UnelevatedButton
        </item>
        <item name="android:buttonBarNeutralButtonStyle">@style/Widget.MaterialComponents.Button.UnelevatedButton</item>
    </style>

    <style name="Widget.Stadroid.Spinner" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/colorPrimary</item>
        <item name="android:dividerHeight">2dp</item>
    </style>


    <style name="Widget.Stadroid.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Stadroid.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextAppearance.Stadroid.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Stadroid.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/md_button</item>
    </style>

    <style name="Widget.Stadroid.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Stadroid.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:theme">@style/Theme.Stadroid</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Stadroid.Toolbar</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="TextAppearance.Stadroid.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Stadroid.Button.NewOrderButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:textSize">16sp</item>
        <item name="android:tint">@color/design_default_color_on_primary</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>

    <style name="TextAppearance.Stadroid.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Stadroid.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="Widget.Stadroid.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="itemBackground">@null</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_tint</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceCaption</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceCaption</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_tint</item>
        <item name="itemRippleColor">@color/mtrl_bottom_nav_ripple_color</item>
    </style>

    <style name="MarketInfoTextViewTitle" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/colorGrayText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="MarketInfoRowTitle">
    </style>

    <style name="MarketInfoRow" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="MarketInfoTextViewKey" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryLightLight</item>
    </style>

    <style name="MarketInfoTextViewValue" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddOrderHintText" parent="TextAppearance.Stadroid.TextInputLayout.HintText">
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:color">@color/colorPrimaryLightLight</item>
    </style>

    <style name="AddOrderTextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@style/AddOrderHintText</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="colorControlNormal">@color/colorPrimaryLightLight</item>
        <item name="colorControlActivated">@color/colorPrimaryLightLight</item>
        <item name="colorControlHighlight">@color/colorPrimaryLightLight</item>
    </style>

    <style name="TransactionDetailTextViewKey" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryLightLight</item>
    </style>

    <style name="TransactionDetailTextViewValue" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
