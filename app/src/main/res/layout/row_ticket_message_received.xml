<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/message_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle_primary_dark"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/message_name"
        tools:text="Technical Department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorPrimaryLightLight"
        app:layout_constraintLeft_toRightOf="@+id/message_avatar"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/message_body"
        tools:text="hi man, how are you?"
        android:background="@drawable/rounded_rectangle_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/message_name"
        app:layout_constraintLeft_toRightOf="@+id/message_avatar"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/message_time"
        tools:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/din_medium"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/message_body"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/message_body"/>

</androidx.constraintlayout.widget.ConstraintLayout>
