<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".profile.ProfileFragment"
              android:background="@color/colorPrimaryDark">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

        <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_tag_faces_black_24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="test@test.com"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center_vertical"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Verified Client"
                    android:textSize="14dp"
                    android:textColor="@color/colorGrayText"
                    android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/lime_900">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Last Login On: 2019-02-12   By: 192.169.1.1"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/pink_700">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Security Alert: 2FA is disable"/>

    </androidx.cardview.widget.CardView>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                >


            <TableRow>

                <TextView
                        android:text="Verification"
                        android:textColor="@color/colorGrayText"
                        android:textSize="16sp"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/email_verify"
                        android:text="Verify Email Address"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/evidence"
                        android:text="Evidences"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:text="Bank Accounts"
                        android:textColor="@color/colorGrayText"
                        android:textSize="16sp"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/shetab"
                        android:text="Shetab Cards"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/sheba"
                        android:text="Sheba Addresses"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:text="Support"
                        android:textColor="@color/colorGrayText"
                        android:textSize="16sp"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/tickets"
                        android:text="Tickets"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/new_ticket"
                        android:text="New Ticket"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:text="Application Security"
                        android:textColor="@color/colorGrayText"
                        android:textSize="16sp"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/pin"
                        android:text="Application PIN"/>

            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/whipe"
                        android:text="Whip Cache"/>

            </TableRow>

            <TableRow>

                <TextView
                        android:text="Withdrawal"
                        android:textColor="@color/colorGrayText"
                        android:textSize="16sp"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/second_factor"
                        android:text="Withdrawal PIN"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/second_factor"
                        android:text="Withdrawal Limitations"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:text="Account Security"
                        android:textColor="@color/colorGrayText"
                        android:textSize="16sp"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/second_factor"
                        android:text="2 Factor Authentication ( 2FA )"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/api_key"
                        android:text="API Keys"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/sessions"
                        android:text="Sessions"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/ip_whitelist"
                        android:text="IP Whitelist"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/logs"
                        android:text="Security Logs"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/change_password"
                        android:text="Change Password"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:text="Other"
                        android:textColor="@color/colorGrayText"
                        android:textSize="16sp"/>
            </TableRow>

            <TableRow>

                <com.google.android.material.button.MaterialButton
                        style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
                        android:id="@+id/logout"
                        android:text="Logout"/>
            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>