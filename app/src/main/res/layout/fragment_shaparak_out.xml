<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".wallet.shaparak.ShaparakOutFragment"
              android:orientation="vertical"
              android:gravity="center">

    <TextView
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdraw IRR By Shaparak"
            android:layout_marginBottom="50dp"
            />

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            app:cardCornerRadius="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="15dp"
                android:paddingTop="10dp">

            <TextView
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deposit Rules"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorPrimaryLightLight"
                    android:layout_marginBottom="15dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/real_red"
                        android:textStyle="bold"
                        android:fontFamily="@font/din_medium"
                        android:text="Minimum"/>

                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryLight"
                        android:layout_marginBottom="10dp"/>


                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/real_blue"
                        android:textStyle="bold"
                        android:fontFamily="@font/din_medium"
                        android:text="Maximum"/>

                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryLight"
                        android:layout_marginBottom="10dp"/>


                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:fontFamily="@font/din_medium"
                        android:text="Commission"/>


            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryLight"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/real_red"
                        android:textStyle="bold"
                        android:fontFamily="@font/din_medium"
                        android:text="0.000001 BTC"/>

                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryLight"
                        android:layout_marginTop="10dp"/>


                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/real_blue"
                        android:textStyle="bold"
                        android:fontFamily="@font/din_medium"
                        android:text="100.0 BTC"/>

                <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryLight"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>


                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:fontFamily="@font/din_medium"
                        android:text="0.4 %"/>


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Which card do you want to pay with?"-->
    <!--android:textColor="@color/colorSecondary"/>-->

    <!--<androidx.appcompat.widget.AppCompatSpinner-->
    <!--android:id="@+id/card_spinner"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="40dp"-->
    <!--android:layout_marginBottom="30dp"-->
    <!--/>-->

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How much IRR would you like to receive?"
            android:textColor="@color/colorSecondary"/>

    <com.google.android.material.textfield.TextInputEditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You will charge xxx IRR more as the commission. So you will receive xxx IRR in your account"
            android:textColor="@color/colorSecondary"
            android:layout_marginBottom="30dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In which account do you want to receive your money?"
            android:textColor="@color/colorSecondary"/>

    <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/account_spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="50dp"/>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorSecondary"
            android:text="Withdraw Money"/>

</LinearLayout>