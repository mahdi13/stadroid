<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".profile.verification.MobilePhoneVerificationFragment"
              android:gravity="center"
              android:orientation="vertical"
    >


    <TextView
        android:fontFamily="@font/din_medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:text="You are fully verified"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryLightLight"/>


    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax"
        android:tint="@color/real_green"
        android:src="@drawable/ic_check_circle_black_24dp"
        android:layout_gravity="center"
        />

    <TextView
        android:fontFamily="@font/din_medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:text="Thank's for your trust !"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryLightLight"/>


</LinearLayout>