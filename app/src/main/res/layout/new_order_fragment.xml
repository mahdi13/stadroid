<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".market.NewOrderFragment"
        android:background="@color/colorPrimaryDark"
        android:paddingEnd="10dp"
        >

    <LinearLayout
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/buttons_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:gravity="center"
                    android:text="@string/minus"/>

            <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="8"
                    android:id="@+id/price"
                    android:hint="@string/price"
                    android:fontFamily="@font/din_medium"
                    android:gravity="center"
                    tools:text="[Best Price]"/>

            <Button
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:gravity="center"
                    android:text="@string/plus"/>

        </LinearLayout>

        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <RadioButton
                    android:id="@+id/market_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginEnd="10dp"
                    android:text="@string/market_order"/>

            <RadioButton
                    android:id="@+id/limit_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/limit_order"/>


        </RadioGroup>


    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:id="@+id/buttons_box"
            android:gravity="center"
            android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="@string/buy"
                android:textColor="@color/white"
                android:backgroundTint="@color/real_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_medium"
                android:id="@+id/buy"/>

        <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="@string/sell"
                android:textColor="@color/white"
                android:backgroundTint="@color/real_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_medium"
                android:id="@+id/sell"/>
    </LinearLayout>


</RelativeLayout>
