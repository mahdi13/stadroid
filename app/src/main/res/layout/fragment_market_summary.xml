<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".market.MarketSummaryFragment">

    <!--<com.bandiago.libs.simplegraph.LineGraph-->
            <!--xmlns:linegraph="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/mini_chart"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--linegraph:lineThickness="5"-->
            <!--linegraph:lineColor="@color/colorAccent"-->
            <!--android:background="@color/colorPrimary"/>-->

    <!--<air.graph.line.GraphView-->
            <!--android:id="@+id/mini_chart"-->
            <!--style="@style/RemainderVertical.AirGraph"-->
            <!--app:graph_title="Weather Report"/>-->

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/mini_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"/>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/row1">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/name"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/din_medium"
                android:text="BTC / USD"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/volume"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/din_medium"
                android:text="23.47653 BTC"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_below="@+id/row1"
            android:id="@+id/row2">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/price"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/din_medium"
                android:text="Price: 1234.56 (+ 2.34 %)"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/deal"
                android:gravity="center"
                android:textColor="@color/colorGrayText"
                android:fontFamily="@font/din_medium"
                android:text="47562532 $"/>

    </LinearLayout>

    <LinearLayout
            android:layout_below="@+id/row2"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/din_medium"
                    android:text="12345.76"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorGrayText"
                    android:textSize="10sp"
                    android:fontFamily="@font/din_medium"
                    android:text="Open"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/high"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/din_medium"
                    android:text="12345.76"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorGrayText"
                    android:textSize="10sp"
                    android:fontFamily="@font/din_medium"
                    android:text="High"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/low"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/din_medium"
                    android:text="12345.76"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorGrayText"
                    android:textSize="10sp"
                    android:fontFamily="@font/din_medium"
                    android:text="Low"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/din_medium"
                    android:text="12345.76"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorGrayText"
                    android:textSize="10sp"
                    android:fontFamily="@font/din_medium"
                    android:text="Close"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>